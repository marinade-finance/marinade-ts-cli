{
    "description": "Marinade typescript-based SDK for CLI",
    "license": "ISC",
    "author": "Marinade.Finance",
    "scripts": {
        "build": "npx tsc -b -verbose",
        "marinade": "pnpm cli",
        "cli": "ts-node ./packages/marinade-ts-cli/src/index.ts",
        "lint:fix": "gts fix",
        "lint": "gts lint",
        "test": "anchor test",
        "_test": "jest $FILE",
        "test:no-anchor": "jest --globalSetup='' $FILE",
        "publish:cli-common": "pnpm build && pnpm publish dist/packages/cli-common",
        "publish:ts-cli-common": "pnpm build && pnpm publish dist/packages/ts-cli-common",
        "publish:jest-utils": "pnpm build && pnpm publish dist/packages/jest-utils",
        "publish:anchor-common": "pnpm build && pnpm publish dist/packages/anchor-common",
        "publish:spl-gov-utils": "pnpm build && pnpm publish dist/packages/spl-gov-utils",
        "publish:ledger-utils": "pnpm build && pnpm publish dist/packages/ledger-utils",
        "publish:marinade-ts-cli": "pnpm build && pnpm publish dist/packages/marinade-ts-cli",
        "publish:all" : "pnpm lint && pnpm publish:cli-common && pnpm publish:ts-cli-common && pnpm publish:jest-utils && pnpm publish:anchor-common && pnpm publish:spl-gov-utils && pnpm publish:ledger-utils && pnpm publish:marinade-ts-cli"
    },
    "devDependencies": {
        "@jest/globals": "^29.5.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^18.15.10",
        "@types/bn.js": "^5.1.1",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@typescript-eslint/typescript-estree": "^5.59.1",
        "bigint-buffer": "^1.1.5",
        "gts": "^5.0.0",
        "husky": "^8.0.3",
        "jest": "^29.0.5",
        "lint-staged": "^13.2.2",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "5.0.4"
    },
    "resolutions": {
        "@typescript-eslint/typescript-estree": "^5.59.1"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "gts lint"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
